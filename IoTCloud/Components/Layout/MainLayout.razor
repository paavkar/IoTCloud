@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        IoT-Cloud
        <Theme />
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://paavokarppinen.azurewebsites.net/" target="_blank">My website</a>
        <FluentSpacer />
        <a href="https://github.com/paavkar" target="_blank">My GitHub</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
